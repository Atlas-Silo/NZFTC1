@page "{id:int?}"
@model NZFTC.Server.Pages.Employees.DeleteEmployeeModel
@{
    ViewData["Title"] = "Delete Employee";
    ViewData["PageTitle"] = "Delete Employee";
}

@section Styles {
    <link rel="stylesheet" href="~/css/employee.css" asp-append-version="true" />
}

<div class="layout">
    <partial name="_AdminSidebar" />

    <div class="main-content">
        <partial name="_Topbar" />

        <main class="content">
            <div class="delete-card">
                <div class="warning-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
                    </svg>
                </div>

                <h2>Delete Employee</h2>
                <p>Are you sure you want to delete this employee? This action cannot be undone.</p>

                @* employee details *@
                <div class="employee-details">
                    <h3>Employee Information</h3>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <span class="detail-label">Employee ID</span>
                            <span class="detail-value">@Model.Employee.EmployeeId</span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">Full Name</span>
                            <span class="detail-value">@Model.Employee.FirstName @Model.Employee.LastName</span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">Email</span>
                            <span class="detail-value">@Model.Employee.Email</span>
                        </div>
                        @*
                        <div class="detail-item">
                            <span class="detail-label">Phone</span>
                            <span class="detail-value">@Model.Employee.Phone</span>
                        </div> *@

                        @* Changed to Role match Dto *@
                        <div class="detail-item">
                            <span class="detail-label">Position</span>
                            <span class="detail-value">@Model.Employee.Role</span>
                        </div>
                        
                        @* Date hired *@
                        <div class="detail-item">
                            <span class="detail-label">Start Date</span>
                            <span class="detail-value">@Model.Employee.DateHired.ToString("dd MMMM yyyy")</span>
                        </div>

                        @*
                        <div class="detail-item">
                            <span class="detail-label">Status</span>
                            <span class="detail-value">@Model.Employee.Status</span>
                        </div>*@
                    </div>
                </div>

                @* Warning Box *@
                <div class="warning-box">
                    <strong>⚠️ Warning: This will permanently delete:</strong>
                    <ul>
                        <li>Employee profile and personal information</li>
                       
                    </ul>
                </div>

                <!-- Actions -->
                <form method="post">
                    <div class="delete-actions">
                        <button type="submit" class="btn btn-danger">
                            Yes, Delete Employee
                        </button>
                        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </main>
    </div>
</div>
