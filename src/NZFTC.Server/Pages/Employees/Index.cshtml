@page
@model NZFTC.Server.Pages.Employees.IndexEmployeeModel
@{
    ViewData["Title"] = "Employees - NZFTC";
    ViewData["PageTitle"] = "Employees";
}

@section Styles {
    <link rel="stylesheet" href="~/css/employee.css" asp-append-version="true" />
}

<div class="layout">
    <partial name="_AdminSidebar" />
    
    <div class="main-content">
        <partial name="_Topbar" />
        
        <main class="content">
            <div class="page-header">
                <div class="page-header-text">
                    <h2>Employee Directory</h2>
                    <p>Manage and view all employee information</p>
                </div>
                <a asp-page="Create" class="btn-add">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                    </svg>
                    Add Employee
                </a>
            </div>

          @* Employee Stats *@
            <div class="stats-bar">
                <div class="stat-item">
                    <div class="stat-icon blue">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
                        </svg>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Total Employees</div>
                        <div class="stat-value">@(Model.TotalEmployees ?? 123)</div>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon green">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M12 2L4 5v6.09c0 5.05 3.41 9.76 8 10.91 4.59-1.15 8-5.86 8-10.91V5l-8-3zm-1.06 13.54L7.4 12l1.41-1.41 2.12 2.12 4.24-4.24 1.41 1.41-5.64 5.66z"/>
                        </svg>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Active</div>
                        <div class="stat-value">@(Model.ActiveEmployees ?? 123)</div>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon orange">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                        </svg>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">New This Month</div>
                        <div class="stat-value">@(Model.NewThisMonth ?? 12)</div>
                    </div>
                </div>
            </div>

            @* Filters Section *@
            <div class="filters-section">
                <form class="filters-grid" method="get">
                    <div class="filter-group">
                        <label for="searchName">Search Name</label>
                        <input type="text" id="searchName" name="searchName" placeholder="Search by name..." value="@Model.SearchName" />
                    </div>

                    <div class="filter-group">
                        <button type="submit" class="btn-filter">Apply Filters</button>
                    </div>
                </form>
            </div>

            @*  Employee Table *@
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Role</th>
                          
                            <th>Date Hired</th>
                         
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model.Employees)
                        {
                            <tr>
                                <td>
                                    <div class="employee-name">
                                        <div class="employee-avatar">@emp.FirstName?.Substring(0,1)@emp.LastName?.Substring(0,1)</div>
                                        <div class="employee-info">
                                            <span class="name">@emp.FirstName @emp.LastName</span>
                                            <span class="id">EMP-@emp.EmployeeId</span>
                                        </div>
                                    </div>
                                </td>

                                <td>@emp.Role</td>
                           
                                <td>@emp.DateHired.ToString("dd MMM yyyy")</td>
                                <td>
                                    <div class="actions">
                                        <a asp-page="Edit" asp-route-id="@emp.EmployeeId" class="btn-icon btn-edit" title="Edit">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                                <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                                            </svg>
                                        </a>
                                        <a asp-page="Delete" asp-route-id="@emp.EmployeeId" class="btn-icon btn-delete" title="Delete">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                                <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/>
                                            </svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @* split pages - define employee per page?*@
                <div class="pagination">
                    <div class="pagination-info">
                        Showing @(Model.PageStart ?? 1) to @(Model.PageEnd ?? 5) of @(Model.TotalEmployees ?? 123) employees
                    </div>
                    <div class="pagination-controls">
                        <button class="pagination-btn" disabled>Previous</button>
                        <button class="pagination-btn active">1</button>
                        <button class="pagination-btn">2</button>
                        <button class="pagination-btn">3</button>
                        <button class="pagination-btn">Next</button>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
