@page
@model NZFTC.Server.Pages.Leave.LeaveApplyModel
@{
    ViewData["Title"] = "Apply for Leave";
    ViewData["PageTitle"] = "Apply for Leave";
}

@section Styles {
    <link rel="stylesheet" href="~/css/leave.css">
}

<div class="layout">
    <partial name="_EmployeeSidebar" />

    <div class="main-content">
        <main class="content">
            <div class="page-header">
                <h2>Request Time Off</h2>
                <p>Submit a new leave request for approval by your manager</p>
            </div>

            <!-- Success Message -->
            <div class="success-message" id="successMessage">
                <p><strong>Success!</strong> Your leave request has been submitted and is pending approval.</p>
            </div>

            <!-- Two Column Layout -->
            <div class="two-column">
                <!-- Form Column -->
                <div class="form-card">
                    <h3>Leave Request Form</h3>

                    <form id="leaveForm" method="post">
                        <!-- Leave Type Section -->
                        <div class="form-section">
                            <div class="form-section-title">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11z"/>
                                </svg>
                                Leave Type & Dates
                            </div>

                            <div class="form-group">
                                <label for="leaveType">
                                    Leave Type
                                    <span class="required">*</span>
                                </label>
                                <select id="leaveType" name="leaveType" required onchange="updateBalance()">
                                    <option value="">Select leave type</option>
                                    @* Backend: Populate from Model.LeaveTypes *@
                                    <option value="annual">Annual Leave</option>
                                    <option value="sick">Sick Leave</option>
                                    <option value="personal">Personal/Carer's Leave</option>
                                    <option value="unpaid">Unpaid Leave</option>
                                    <option value="bereavement">Bereavement Leave</option>
                                    <option value="parental">Parental Leave</option>
                                    <option value="study">Study Leave</option>
                                </select>
                            </div>

                            <div class="date-range-grid">
                                <div class="form-group">
                                    <label for="startDate">
                                        Start Date
                                        <span class="required">*</span>
                                    </label>
                                    <input 
                                        type="date" 
                                        id="startDate" 
                                        name="startDate" 
                                        required
                                        onchange="calculateDays()">
                                </div>

                                <div class="form-group">
                                    <label for="endDate">
                                        End Date
                                        <span class="required">*</span>
                                    </label>
                                    <input 
                                        type="date" 
                                        id="endDate" 
                                        name="endDate" 
                                        required
                                        onchange="calculateDays()">
                                </div>
                            </div>

                            <div class="calculated-days" id="calculatedDays" style="display: none;">
                                <span class="days-number" id="daysNumber">0</span>
                                <span class="days-label">Working Days Requested</span>
                            </div>

                            <div class="checkbox-group">
                                <input type="checkbox" id="halfDay" name="halfDay" onchange="toggleHalfDay()">
                                <label for="halfDay">This is a half-day leave request</label>
                            </div>
                        </div>

                        <!-- Reason Section -->
                        <div class="form-section">
                            <div class="form-section-title">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
                                </svg>
                                Leave Details
                            </div>

                            <div class="form-group">
                                <label for="reason">
                                    Reason for Leave
                                    <span class="required">*</span>
                                </label>
                                <textarea 
                                    id="reason" 
                                    name="reason" 
                                    placeholder="Please provide a brief reason for your leave request..."
                                    required></textarea>
                                <div class="help-text">Provide sufficient detail to help your manager process this request</div>
                            </div>

                            <div class="form-group">
                                <label for="contactNumber">Emergency Contact Number</label>
                                <input 
                                    type="text" 
                                    id="contactNumber" 
                                    name="contactNumber" 
                                    placeholder="e.g., +64 21 123 4567">
                                <div class="help-text">Optional: Provide a contact number in case of emergency during your leave</div>
                            </div>

                            <div class="form-group">
                                <label for="coveringPerson">Work Coverage Arrangement</label>
                                <input 
                                    type="text" 
                                    id="coveringPerson" 
                                    name="coveringPerson" 
                                    placeholder="e.g., Sarah Johnson will cover my duties">
                                <div class="help-text">Optional: Indicate who will handle your responsibilities during your absence</div>
                            </div>

                            <div class="form-group">
                                <label for="additionalNotes">Additional Notes</label>
                                <textarea 
                                    id="additionalNotes" 
                                    name="additionalNotes" 
                                    placeholder="Any other information your manager should know..."></textarea>
                            </div>
                        </div>

                        <!-- Acknowledgment -->
                        <div class="form-section">
                            <div class="checkbox-group">
                                <input type="checkbox" id="acknowledgment" name="acknowledgment" required>
                                <label for="acknowledgment">
                                    I confirm that the information provided is accurate and I understand this request is subject to manager approval
                                    <span class="required">*</span>
                                </label>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-success">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                </svg>
                                Submit Request
                            </button>
                            <button type="button" class="btn btn-primary" onclick="saveDraft()">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path d="M17 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V7l-4-4zm-5 16c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-10H5V5h10v4z"/>
                                </svg>
                                Save as Draft
                            </button>
                            <button type="button" class="btn btn-secondary" asp-page="Requests">
                                Cancel
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Sidebar Column -->
                <div>
                    <!-- Leave Balance Card -->
                    <div class="balance-card">
                        <h3>Leave Balance</h3>

                        @* Backend: Loop through Model.LeaveBalances *@
                        <div class="balance-item">
                            <div class="balance-label">Annual Leave</div>
                            <div class="balance-value">
                                15.5 <span class="unit">days</span>
                            </div>
                            <div class="balance-progress">
                                <div class="balance-progress-bar" style="width: 77.5%;"></div>
                            </div>
                        </div>

                        <div class="balance-item">
                            <div class="balance-label">Sick Leave</div>
                            <div class="balance-value">
                                8 <span class="unit">days</span>
                            </div>
                            <div class="balance-progress">
                                <div class="balance-progress-bar" style="width: 80%;"></div>
                            </div>
                        </div>

                        <div class="balance-item">
                            <div class="balance-label">Personal/Carer's Leave</div>
                            <div class="balance-value">
                                3 <span class="unit">days</span>
                            </div>
                            <div class="balance-progress">
                                <div class="balance-progress-bar low" style="width: 60%;"></div>
                            </div>
                        </div>

                        <div class="balance-item">
                            <div class="balance-label">Bereavement Leave</div>
                            <div class="balance-value">
                                5 <span class="unit">days</span>
                            </div>
                            <div class="balance-progress">
                                <div class="balance-progress-bar" style="width: 100%;"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Info Box -->
                    <div class="info-box">
                        <p><strong>Important Information:</strong></p>
                        <ul>
                            <li>Submit requests at least 2 weeks in advance</li>
                            <li>Annual leave requires manager approval</li>
                            <li>Sick leave may require medical certificate</li>
                            <li>Check public holidays before requesting</li>
                        </ul>
                    </div>

                    <!-- Quick Links -->
                    <div class="quick-links">
                        <h4>Quick Links</h4>
                        <a asp-page="Requests" class="quick-link">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
                            </svg>
                            View My Requests
                        </a>
                        <a asp-page="/Holidays/Index" class="quick-link">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M17 12h-5v5h5v-5zM16 1v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2h-1V1h-2zm3 18H5V8h14v11z"/>
                            </svg>
                            View Public Holidays
                        </a>
                        <a asp-page="Policies" class="quick-link">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 14h-3v3h-2v-3H8v-2h3v-3h2v3h3v2zm-3-7V3.5L18.5 9H13z"/>
                            </svg>
                            Leave Policies
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
