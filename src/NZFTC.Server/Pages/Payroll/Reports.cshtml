                    <button class="btn-export" type="button" onclick="alert('CSV Export: backend endpoint will be implemented.')">Export CSV</button>
                </div>

                <h2>Recent Pay Cycles</h2>
                <table>
                    <thead>
                    <tr>
                        <th>Cycle</th>
                        <th>Period</th>
                        <th>Employees</th>
                        <th>Net Payroll</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>2025-21</td>
