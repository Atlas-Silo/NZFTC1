@page
@model NZFTC.Server.Pages.Payroll.PayrollReportsModel
@{
    ViewData["Title"] = "Payroll Reports";
    ViewData["PageTitle"] = "Payroll Reports";
}

@section Styles {
    <link rel="stylesheet" href="~/css/payroll.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/reports.css" asp-append-version="true" />
}

<div class="layout">
    <partial name="_AdminSidebar" />

    <div class="main-content">
        <partial name="_Topbar" />

        <main class="content">
            <div class="container">
                <h1>Payroll Summary Reports</h1>
