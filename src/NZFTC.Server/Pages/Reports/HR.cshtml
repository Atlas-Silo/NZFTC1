@page
@model NZFTC.Server.Pages.Reports.HRReportsModel
@{
    ViewData["Title"] = "HR Reports";
    ViewData["PageTitle"] = "HR Summary Reports";
}

@section Styles {
    <link rel="stylesheet" href="~/css/reports.css" asp-append-version="true" />
}

<div class="layout">
    <partial name="_AdminSidebar" />

    <div class="main-content">
        <partial name="_Topbar" />

        <main class="content">
            <div class="container">
                <h1>HR Summary Reports</h1>
                <p class="desc">Scope-limited HR reporting: basic leave request log and current leave balance snapshot. Advanced analytics, trend charts, headcount forecasting, training, performance scoring, and probation metrics are intentionally excluded per project scope.</p>
                <div class="actions">
                    <button class="btn-export" type="button" onclick="alert('CSV Export: backend endpoint will be implemented.')">Export CSV</button>
                </div>

                <h2>Recent Leave Requests</h2>
                <table>
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Employee</th>
                        <th>Type</th>
                        <th>Days</th>
                        <th>Status</th>
                    </tr>
