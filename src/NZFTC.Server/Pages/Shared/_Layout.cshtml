@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@using NZFTC.Data.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NZFTC</title>

   @*Core styles*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" /> @*come back to this*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* Page-specific styles *@
    @RenderSection("Styles", required: false)
</head>
<body>
    @RenderBody()

    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; @DateTime.Now.Year - NZFTC
        </div>
    </footer>

    @* Core scripts *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Page-specific scripts *@
    @RenderSection("Scripts", required: false)
</body>
</html>